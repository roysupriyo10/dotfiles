#!/bin/bash

NUM_WINDOWS=3

tmux new-session -ds "p40-server" -c "/home/roysupriyo10/developer/pitch40/server"
tmux new-session -ds "p40-remote-upload-client" -c "/home/roysupriyo10/developer/pitch40/remote-upload-client"
tmux new-session -ds "p40-admin-client" -c "/home/roysupriyo10/developer/pitch40/admin-client"
tmux new-session -ds "p40-startup-client" -c "/home/roysupriyo10/developer/pitch40/startup-client"
tmux new-session -ds "p40-old-backend" -c "/home/roysupriyo10/developer/pitch40/old-server"
tmux new-session -ds "p40-investor-client" -c "/home/roysupriyo10/developer/pitch40/investor-client"
tmux new-session -ds "p40-admin-new-client" -c "/home/roysupriyo10/developer/pitch40/admin-new-client"

for ((j=1; j<=2; j++)); do
  tmux new-window -dt "p40-server" -c "/home/roysupriyo10/developer/pitch40/server"
  tmux new-window -dt "p40-remote-upload-client" -c "/home/roysupriyo10/developer/pitch40/remote-upload-client"
  tmux new-window -dt "p40-admin-client" -c "/home/roysupriyo10/developer/pitch40/admin-client"
  tmux new-window -dt "p40-startup-client" -c "/home/roysupriyo10/developer/pitch40/startup-client"
  tmux new-window -dt "p40-old-backend" -c "/home/roysupriyo10/developer/pitch40/old-server"
  tmux new-window -dt "p40-investor-client" -c "/home/roysupriyo10/developer/pitch40/investor-client"
  tmux new-window -dt "p40-admin-new-client" -c "/home/roysupriyo10/developer/pitch40/admin-new-client"
done

tmux a
