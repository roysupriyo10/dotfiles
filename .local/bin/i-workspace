#!/bin/bash

NUM_WINDOWS=3

tmux new-session -ds "palette-server-nest" -c "/home/roysupriyo10/developer/typescript/palette/server"
tmux new-session -ds "palette-client" -c "/home/roysupriyo10/developer/typescript/palette/client"
tmux new-session -ds "interface-server" -c "/home/roysupriyo10/developer/typescript/interface/server"
tmux new-session -ds "interface-client" -c "/home/roysupriyo10/developer/typescript/interface/client"
tmux new-session -ds "rss-aggregator" -c "/home/roysupriyo10/developer/go/rss-aggregator"

for ((j=1; j<=2; j++)); do
  tmux new-window -dt "palette-server-nest" -c "/home/roysupriyo10/developer/typescript/palette/server"
  tmux new-window -dt "palette-client" -c "/home/roysupriyo10/developer/typescript/palette/client"
  tmux new-window -dt "interface-server" -c "/home/roysupriyo10/developer/typescript/interface/server"
  tmux new-window -dt "interface-client" -c "/home/roysupriyo10/developer/typescript/interface/client"
  tmux new-window -dt "rss-aggregator" -c "/home/roysupriyo10/developer/go/rss-aggregator"
  
done

tmux a
